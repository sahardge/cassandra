[Unit]
Description=Cassandra Seed
After=etcd.service
Requires=docker.service
After=docker.service


[Service]
TimeoutStartSec=0
EnvironmentFile=/etc/environment
RemainAfterExit=yes
ExecStartPre= /usr/bin/etcdctl set /seed "$COREOS_PUBLIC_IPV4"
ExecStartPre= /usr/bin/docker pull sahardge/cassandra
ExecStart= /bin/bash -c "/usr/bin/docker start %n || \
           /usr/bin/docker run -d --name %n sahardge/cassandra bash /usr/sbin/start-seed.sh"
ExecStop= /usr/bin/docker stop -t 3 %n
